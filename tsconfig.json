{
  "extends": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "preserveConstEnums": true,
    "allowJs": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext"
  },
  "include": [
    "src/components/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
